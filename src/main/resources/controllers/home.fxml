<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">
    <BorderPane fx:id="root" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
        <top>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <ImageView fitHeight="50.0" fitWidth="100.0">
                    <image>
                        <Image url="@../photos/airport_logo.png"/>
                    </image>
                </ImageView>
                <Label text="Kosovo International Airport" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Hyperlink text="Sign Out" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>
        </top>
        <left>
            <VBox prefHeight="550.0" prefWidth="135.0" spacing="10.0">
                <Hyperlink text="Flights" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink text="Passengers" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink text="Security" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink text="Baggage" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Hyperlink text="Services" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </VBox>
        </left>
        <center>
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Welcome to Kosovo International Airport" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                <ImageView fitHeight="200.0" fitWidth="200.0">
                    <image>
                        <Image url="@../photos/airoporti.jpg"/>
                    </image>
                </ImageView>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
